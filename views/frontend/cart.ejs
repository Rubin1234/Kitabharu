<% cartProduct.products.forEach(function(data){ %>
    <tr class="cart_item">
      <input type="hidden" value="<%= data._id %>" name="product_id[]">
   
      <% if(data.book_type != null){ %>
         <input type="hidden" value="<%= data.book_type %>" name="book_type[]" >
         <% }else{ %>
            <input type="hidden" value=null name="book_type[]" >
         <% } %>
   
         <% if(data.book_type != 'ebook'){ %>
            <input type="hidden" value="<%= data.product_price %>" name="price[]" >
            <% }else{ %>
               <input type="hidden" value="<%= data.ebook_id.ebook_price %>" name="price[]" >
            <% } %>

      <td class="cart-product-remove">
         <i class="icon-trash2 remove" onclick="removeItem()" cartProduct="<%= cartProduct._id %>" productId="<%= data._id %>" bookType="<%= data.book_type %>"></i>
      </td>
      <td class="cart-product-thumbnail">
         <a href="#"><img width="64" height="64" src="images/backend/products/<%= data.product_image %>" alt="<%= data.product_name %>"></a>
      </td>
      <td class="cart-product-name">
         <a href="#"><%= data.product_name %> </a>
         
         <% if(data.book_type == 'ebook'){ %>
         
         <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(E-Book)</span>
         <% } %>
         <% if(data.book_type == 'paperbook'){ %>
            <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(Book)</span>
            <% } %>
            <% if(data.book_type == null){ %>
               <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(Stationary)</span>
               <% } %>
      </td>
      <td class="cart-product-price">
         <% if(data.book_type == 'ebook'){ %>
         <span class="amountPerProduct" amountPerProduct="<%= data.ebook_id.ebook_price %>" >Rs  <%= data.ebook_id.ebook_price %></span>
            <% }else{ %>

               <span class="amountPerProduct" amountPerProduct="<%= data.product_price %>" >Rs  <%= data.product_price %></span>
                  <% } %>
      </td>
      <td class="cart-product-quantity">
         <div class="quantity clearfix">
         
            
            <% if(data.book_type == 'ebook'){ %>
               <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="-" class="minus"  onclick="productNumberSub()" disabled>
               <input type="text" name="quantity[]"  max="<%= data.product_stock %>" value="<%= data.qty %>" qty="<%= data.qty %>" class="qty" />
               <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="+" class="plus" onclick="productNumberAdd()" disabled>
               <% }else{ %>
                  <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="-" class="minus"  onclick="productNumberSub()">
                  <input type="text" name="quantity[]"  max="<%= data.product_stock %>" value="<%= data.qty %>" qty="<%= data.qty %>" class="qty" />
                  <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="+" class="plus" onclick="productNumberAdd()">
                  <% } %>
  
         </div>
      </td>
      <td class="cart-product-subtotal">
         <span class="amountTotal" style="color: #145ba2;"></span>
      </td>
    </tr>
<% }) %>  



    
  
