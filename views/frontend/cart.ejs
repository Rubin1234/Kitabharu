<section id="content">
    <div class="">
    <div class="container clearfix">
       <% if(cartProduct != null){ %>
      <% if(cartProduct.products.length > 0 && cartProduct.products != null){ %>
    <div class="table-responsive">
      <form action="cart/update" method="POST" >


   <table class="table cart">
    <thead>
    <tr>
    <th class="cart-product-remove">&nbsp;</th>
    <th class="cart-product-thumbnail">&nbsp;</th>
    <th class="cart-product-name">Product</th>
    <th class="cart-product-price">Unit Price</th>
    <th class="cart-product-quantity">Quantity</th>
    <th class="cart-product-subtotal">Total</th>
    </tr>
    </thead>
    <tbody class="cartItem">

<% cartProduct.products.forEach(function(data){ %>
    <tr class="cart_item">
      <input type="hidden" value="<%= data._id %>" name="product_id[]">
   
      <% if(data.book_type != null){ %>
         <input type="hidden" value="<%= data.book_type %>" name="book_type[]" >
         <% }else{ %>
            <input type="hidden" value=null name="book_type[]" >
         <% } %>
   
         <% if(data.book_type != 'ebook'){ %>
            <input type="hidden" value="<%= data.product_price %>" name="price[]" >
            <% }else{ %>
               <input type="hidden" value="<%= data.ebook_id.ebook_price %>" name="price[]" >
            <% } %>

      <td class="cart-product-remove">
         <i class="icon-trash2 remove" onclick="removeItem()" cartProduct="<%= cartProduct._id %>" productId="<%= data._id %>" bookType="<%= data.book_type %>"></i>
      </td>
      <td class="cart-product-thumbnail">
         <a href="#"><img width="64" height="64" src="images/backend/products/<%= data.product_image %>" alt="<%= data.product_name %>"></a>
      </td>
      <td class="cart-product-name">
         <a href="#"><%= data.product_name %> </a>
         
         <% if(data.book_type == 'ebook'){ %>
         
         <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(E-Book)</span>
         <% } %>
         <% if(data.book_type == 'paperbook'){ %>
            <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(Book)</span>
            <% } %>
            <% if(data.book_type == null){ %>
               <span style="font-weight: 700;font-size: 14.5px;color: #dd3a3a;font-family: sans-serif;">(Stationary)</span>
               <% } %>
               <% if(data.discount_percent > 0){ %>
               <div class="showdiscountpercentCart"><%= data.discount_percent%>% off</div>
               <% } %>
      </td>
      <td class="cart-product-price">
         <% if(data.book_type == 'ebook'){ %>

            <% if(data.discount_percent > 0){
               var discount_price = 0;
               var discount_price = data.discount_percent/100 * data.ebook_id.ebook_price
               var discountedAmount = data.ebook_id.ebook_price - discount_price
               %>
                  <s style="color: #848484;font-family:auto;font-size: 19px;padding-left: 10px;margin-left: auto;
                  margin-right: auto;padding-top: 2px;">Rs <%= data.ebook_id.ebook_price %></s> &nbsp;&nbsp;
                  <span class="amountPerProduct" amountPerProduct="<%= discountedAmount %>" style="font-weight: bold;color: #6c6c6c;">Rs  <%= discountedAmount %></span>
               <% }else{ %>
                  <span class="amountPerProduct" amountPerProduct="<%= data.ebook_id.ebook_price %>" style="font-weight: bold;color: #6c6c6c;">Rs  <%= data.ebook_id.ebook_price %></span>
                  <% } %>
        
            <% }else{ %>

               <% if(data.discount_percent > 0){
                  var discount_price = 0;
                  var discount_price = data.discount_percent/100 * data.product_price
                  var discountedAmount = data.product_price - discount_price
                  %>
                     <s amountPerProduct="<%= discountedAmount %>" style="color: #848484;font-family:auto;font-size: 19px;padding-left: 10px;margin-left: auto;
                     margin-right: auto;padding-top: 2px;">Rs <%= data.product_price %></s> &nbsp;&nbsp;
                     <span class="amountPerProduct" amountPerProduct="<%= discountedAmount %>" style="font-weight: bold;color: #6c6c6c;">Rs  <%= discountedAmount %></span>
                  <% }else{ %>
                     <span class="amountPerProduct" amountPerProduct="<%= data.product_price %>" style="font-weight: bold;color: #6c6c6c;">Rs  <%= data.product_price %></span>
                     <% } %>

               
                  <% } %>
      </td>
      <td class="cart-product-quantity">
         <div class="quantity clearfix">
         
            
            <% if(data.book_type == 'ebook'){ %>
               <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="-" class="minus"  onclick="productNumberSub()" disabled>
               <input type="text" name="quantity[]"  max="<%= data.product_stock %>" value="<%= data.qty %>" qty="<%= data.qty %>" class="qty" />
               <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="+" class="plus" onclick="productNumberAdd()" disabled>
               <% }else{ %>
                  <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="-" class="minus"  onclick="productNumberSub()">
                  <input type="text" name="quantity[]"  max="<%= data.product_stock %>" value="<%= data.qty %>" qty="<%= data.qty %>" class="qty" />
                  <input type="button" productId="<%= data._id %>" bookType="<%= data.book_type %>" value="+" class="plus" onclick="productNumberAdd()">
                  <% } %>
  
         </div>
      </td>
      <td class="cart-product-subtotal">
         <span class="amountTotal" style="color: #145ba2;"></span>
      </td>
    </tr>
<% }) %>  



    
  
    <tr class="cart_item" style="margin-top: 10px;">
    <td colspan="6">
    <div class="row clearfix" style="padding-top: 15px;">
    <!-- <div class="col-lg-4 col-4 nopadding">
    <div class="row">
    <div class="col-lg-8 col-7">
    <input type="text" value="" class="sm-form-control" placeholder="Enter Coupon Code.." />
    </div>
    <div class="col-lg-4 col-5">
    <a href="#" class="button button-3d button-black nomargin">Apply Coupon</a>
    </div>
    </div>
    </div> -->
    <div class="col-lg-12 col-8 nopadding">
    <a href="/payment"><b class="button button-3d notopmargin fright">Proceed to Checkout</b></a>
    <!-- <button type="submit" class="button button-3d nomargin fright">Update Cart</button> -->
    </div>
    </div>
    </td>
    </tr>
 
    </tbody>
 
   </table>

</form>
    </div>
    <br>
    <br>
    <div class="row clearfix" style="padding-bottom: 40px;">
 
    <div class="col-lg-7 clearfix" id="padding-left" >
    <h4 style="font-size: 25px;margin-bottom: 15px;background-color: #daeeff;padding: 6px 10px;">Cart Totals</h4>
    <div class="table-responsive">
    <table class="table cart">
    <tbody>
    <tr class="cart_item">
    <td class="cart-product-name">
    <strong>Cart Subtotal</strong>
    </td>
    <td class="cart-product-name">
    <span class="amount" style="color:#145ba2;">Rs <%= cartProduct.total_price %></span>
    </td>
    </tr>
    <tr class="cart_item">
    <td class="cart-product-name">
    <strong>Shipping</strong>
    </td>
    <td class="cart-product-name">
    <span class="amount">Free Delivery</span>
    </td>
    </tr>
    <tr class="cart_item">
    <td class="cart-product-name">
    <strong>Total</strong>
    </td>
    <td class="cart-product-name">
    <span class="amount color lead"><strong>Rs <%= cartProduct.total_price %></strong></span>
    </td>
    </tr>
    </tbody>
    </table>
    </div>
    </div>
    <div class="col-lg-4 clearfix" id="padding-left" >
      <h4 style="font-size: 25px;margin-bottom: 15px;">We Accept</h4>
      <hr>
      <img src="frontend_images/footer/esewa.jpg" alt="" width="100px" height="80px" style="margin-right: 25px;">
      <img src="frontend_images/footer/cod.jpg" alt="" width="80px" height="50px">
      </div>
    </div>
       <% }else{ %>
         <div style="text-align: center;">
            <img width="25%" src="images/no-products-found.png" alt="" style="margin-bottom: 25px;">
         </div>
   
   <% }}else{ %>
      <div style="text-align: center;">
         <img width="25%" src="images/no-products-found.png" alt="" style="margin-bottom: 25px;">
      </div>
    <% } %>
    </div>
    </div>
    </section>
    










